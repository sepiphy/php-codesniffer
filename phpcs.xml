<?xml version="1.0"?>
<ruleset name="XuanQuynh">
    <description>Personal PHP Standards Checker by PHP CodeSniffer.</description>

    <arg name="tab-width" value="4"/>

    <rule ref="PSR2"/>
    <rule ref="Squiz.WhiteSpace.CastSpacing"/>
    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing">
        <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.LineAfterClose"/>
    </rule>
    <rule ref="Squiz.WhiteSpace.FunctionOpeningBraceSpace"/>
    <rule ref="Squiz.WhiteSpace.LanguageConstructSpacing"/>
    <rule ref="Squiz.WhiteSpace.LogicalOperatorSpacing"/>

    <rule ref="./src/Sniffs/Arrays/ArrayDeclarationSniff.php"/>
    <rule ref="./src/Sniffs/Comments/DisallowHashCommentsSniff.php"/>
    <rule ref="./src/Sniffs/Comments/PropertyOrConstantCommentSniff.php"/>
    <rule ref="./src/Sniffs/Comments/FunctionOrMethodParamNotationSniff.php"/>
    <rule ref="./src/Sniffs/Comments/FunctionOrMethodReturnNotationSniff.php"/>
    <rule ref="./src/Sniffs/Comments/FunctionOrMethodThrowsNotationSniff.php"/>
    <rule ref="./src/Sniffs/Strings/DoubleQuoteUsageSniff.php"/>
    <rule ref="./src/Sniffs/Variables/ValidVariableNameSniff.php"/>
</ruleset>

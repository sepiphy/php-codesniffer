{
    "name": "xuanquynh/php-codesniffer",
    "description": "CodeSniffer for XuanQuynh Coding Recommendations.",
    "keywords": ["xuanquynh", "codesniffer"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/xuanquynh/php-codesniffer",
    "support": {
        "issues": "https://github.com/xuanquynh/php-codesniffer/issues",
        "source": "https://github.com/xuanquynh/php-codesniffer"
    },
    "authors": [
        {
            "name": "Quynh Xuan Nguyen",
            "email": "seriquynh@gmail.com",
            "homepage": "http://seriquynh.com",
            "role": "Software Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "wataridori/framgia-php-codesniffer": "^0.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "XuanQuynh\\CodeSniffer\\": "src/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php vendor/bin/phpcs --config-set installed_paths src/Standards"
        ],
        "fix": [
            "@php vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "@php vendor/bin/phpcs src/*.php --standard=XuanQuynh"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

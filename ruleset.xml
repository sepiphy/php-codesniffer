<?xml version="1.0"?>
<ruleset name="XuanQuynh">
    <description>Checking PHP coding convention by CodeSniffer.</description>

    <arg name="tab-width" value="4"/>

    <rule ref="PSR2">
        <exclude name="PSR2.Methods.FunctionCallSignature"/>
    </rule>

    <rule ref="Squiz.WhiteSpace.CastSpacing"/>
    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing">
        <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.LineAfterClose"/>
    </rule>
    <rule ref="Squiz.WhiteSpace.FunctionOpeningBraceSpace"/>
    <rule ref="Squiz.WhiteSpace.LanguageConstructSpacing"/>
    <rule ref="Squiz.WhiteSpace.LogicalOperatorSpacing"/>

    <rule ref="./Sniffs/Arrays/ArrayDeclarationSniff.php"/>
    <rule ref="./Sniffs/Comments/DisallowHashCommentsSniff.php"/>
    <rule ref="./Sniffs/Comments/PropertyOrConstantCommentSniff.php"/>
    <rule ref="./Sniffs/Comments/FunctionOrMethodParamCommentSniff.php"/>
    <rule ref="./Sniffs/Comments/FunctionOrMethodReturnCommentSniff.php"/>
    <rule ref="./Sniffs/Comments/FunctionOrMethodThrowsCommentSniff.php"/>
    <rule ref="./Sniffs/Comments/FunctionOrMethodOrderedCommentsSniff.php"/>
    <rule ref="./Sniffs/Strings/DoubleQuoteUsageSniff.php"/>
    <rule ref="./Sniffs/Variables/ValidVariableNameSniff.php"/>
</ruleset>
